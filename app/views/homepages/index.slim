    /! grid
    .gla_portfolio_no_padding.grid
      - (1..8).each do |i|
        .col-sm-3.gla_anim_box.grid-item.hanoi
          .gla_shop_item
            - original_image_url = image_url "gallery/BT_#{i}.jpg"
            a.lightbox href="#{original_image_url}"
              img alt="" src="#{original_image_url}"
      - (1..10).each do |i|
        .col-sm-3.gla_anim_box.grid-item.moc_chau
          .gla_shop_item
            - original_image_url = image_url "gallery/MC_#{i}.jpg"
            a.lightbox href="#{original_image_url}"
              img alt="" src="#{original_image_url}"
      - (1..10).each do |i|
        .col-sm-3.gla_anim_box.grid-item.ta_xua
          .gla_shop_item
            - original_image_url = image_url "gallery/TX_#{i}.jpg"
            a.lightbox href="#{original_image_url}"
              img alt="" src="#{original_image_url}"
