    .button-group.filter-button-group
      a data-filter="*"  Tất cả
      a data-filter=".hanoi"  Hà Nội
      a data-filter=".moc_chau"  Mộc Châu
      a data-filter=".ta_xua"  Tà Xùa
      a data-filter=".an_hoi"  Ăn Hỏi
      a data-filter=".cuoi"  Lễ cưới
